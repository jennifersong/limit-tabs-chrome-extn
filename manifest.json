{
    "name": "Tab Limits",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Limits the number of tabs you have open in your browser. Prevents you from opening more until you are under that limit. The limit can be customized in the Options page.",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Tab Limits"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs"
  ]
}
